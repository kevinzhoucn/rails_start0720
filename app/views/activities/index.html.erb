<div class="ipacro-postcontent ipacro-postcontent-0 clearfix">
  <div class="ipacro-content-layout">
    <div class="ipacro-content-layout-row">
      <div class="ipacro-layout-cell layout-item-0" style="width:100%;height:140px;background-image:url(http://tigermed.net/images/2_01.jpg);background-size:100%;" >
      </div>
    </div>
  </div>
  <div class="ipacro-content-layout" style="margin-top:10px;">
    <div class="ipacro-content-layout-row">
      <div class="ipacro-layout-cell layout-item-0" style="width: 25%" >
        <h3>搜索员工动态</h3>
        <!-- <input type="search" placeholder="请输入关键字" size="16" />
        <input class="ipacro-button" style="font-weight: bolder; zoom: 1;" type="submit" value="搜索"> -->
        <%= form_tag activities_search_path, :method => 'get' do %>
          <%= text_field_tag :key, params[:key], type:"search",placeholder:"请输入关键字",size:"20"%>
          <%= submit_tag "搜索", :name => nil, class:"ipacro-button" %>
        <% end %> 
      </div>
      <div class="ipacro-layout-cell layout-item-0" style="width: 75%" >
        <div class="layout-item-2">
          <h3>员工园地</h3>
          <ul>
            <% @activities.each do |activity| %>
              <li style="font-size:1.1em">
                <%= link_to activity.title, activity %>
              </li>
            <%end%>            
          </ul>
          <%= paginate @activities %>
        </div>
      </div>
    </div>
  </div>
</div>