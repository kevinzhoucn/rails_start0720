<%= simple_form_for(@slide) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :sub_title %>
    <%#= f.input :image_url %>
    <%= f.input :avatar, label: "上传图片：" %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
