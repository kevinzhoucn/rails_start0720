<!DOCTYPE html>
<html>
  <head>
    <title><%= @site_title %></title>
    <%= stylesheet_link_tag "application", media: "all" %>
    <%= render_stylesheets %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body class="<%= controller_name %>" data-controller-name="<%= controller_name %>">
    <div class="container">
      <%= render '/common/navigation' %>
      <%= render '/common/front/home_nav_bar' %>
      <%= render '/common/front/home_nav_tabs' %>
    </div>

    <div class="container">
      <%= yield %>
    </div>

    <div class="container">
      <%= render '/common/footer' %>
    </div>
  </body>
</html>
