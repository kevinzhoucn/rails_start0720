<h1>Listing products</h1>

<%= link_to t('cpanel.product.index.new'), new_cpanel_product_path %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Category</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.content %></td>
        <td><%= product.category_id %></td>
        <td><%= link_to 'Show', cpanel_product_path(product) %></td>
        <td><%= link_to 'Edit', edit_cpanel_product_path(product) %></td>
        <td><%= link_to 'Destroy', cpanel_product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


