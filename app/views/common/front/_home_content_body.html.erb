<div>
  <%= image_tag @home_company_image.avatar.url, size: "250x200", alt: "Home Company Image" %>
  <%= @home_company_summary.html_safe %>
</div>

<div>
  <%= image_tag @home_news_image.avatar.url, size: "250x200", alt: "Home News Image" %>  
  <span>
    <%= render @front_news %>
  </span>

  <span>
    <%= link_to "More...", news_index_path %>
  </span>
</div>

<div>
  <%= image_tag @home_product_image.avatar.url, size: "250x200", alt: "Home Product Image" %>  
  <span>
    <%= render @front_products %>
  </span>

  <span>
    <%= link_to "More...", products_path %>
  </span>
</div>

<div>
  <p>Search result:</p>
  <ul>
    <% @search_result.each do |item_result| %>
      <% item_result.each do |item| %>
        <li>
          <%= link_to item.title, item %>
        </li>
      <% end %>  
    <% end %>
  </ul>
</div>